}

/* èƒŒæ™¯è£…é¥° */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.05;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -50rpx;
  background: var(--accent-color);
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -80rpx;
  left: -100rpx;
  background: var(--accent-color);
}

/* é¡¶éƒ¨åŒºåŸŸ */
.header-section {
  flex: 0 0 auto;
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.logo-box {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  background: var(--accent-light);
  border-radius: 30rpx;
}

.logo-icon {
  font-size: 64rpx;
}

.app-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.app-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 400;
  line-height: 1.5;
}

/* ç™»å½•å¡ç‰‡åŒº */
.login-cards {
  flex: 1 1 auto;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

/* å¡ç‰‡é€šç”¨æ ·å¼ */
.card {
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border: 2rpx solid var(--border-color);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow);
  position: relative;
}

.card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-hover);
}

/* å¾®ä¿¡å¡ç‰‡ */
.wechat-card {
  border-color: var(--accent-color);
  background: linear-gradient(135deg, var(--bg-card) 0%, var(--accent-light) 100%);
}

.wechat-card:active {
  border-color: var(--accent-color);
}

/* æ¸¸å®¢å¡ç‰‡ */
.guest-card {
  border-color: #4a90e2;
}

/* å¡ç‰‡å¤´éƒ¨ */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  width: 100%;
}

.card-icon {
  font-size: 44rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* å¡ç‰‡æè¿° */
.card-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

/* å¡ç‰‡ç®­å¤´ */
.card-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--accent-color);
  font-weight: bold;
  opacity: 0.6;
  transition: all 0.3s;
}

.card:active .card-arrow {
  opacity: 1;
  right: 16rpx;
}

/* åº•éƒ¨åŒºåŸŸ */
.footer-section {
  flex: 0 0 auto;
  padding: 30rpx 40rpx 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.agreement-hint {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
  margin-bottom: 12rpx;
}

.agreement-links {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0;
  flex-wrap: wrap;
}

.link {
  font-size: 22rpx;
  color: var(--accent-color);
  text-decoration: none;
  font-weight: 500;
}

.link:active {
  opacity: 0.7;
}

.separator {
  color: var(--text-tertiary);
  margin: 0 8rpx;
}

/* åŠ è½½è¦†ç›–å±‚ */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-box {
  background: var(--bg-card);
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: var(--shadow-hover);
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--accent-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

