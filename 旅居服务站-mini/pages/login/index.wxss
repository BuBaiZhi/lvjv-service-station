/* é¡µé¢å®¹å™¨ */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f9fa;  /* é»˜è®¤èƒŒæ™¯è‰² */
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  
  /* é»˜è®¤CSSå˜é‡ - ä¸ä¾èµ– theme ç±» */
  --bg-page: #f8f9fa;
