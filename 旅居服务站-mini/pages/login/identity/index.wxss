/* ğŸŒ™ ä¸»é¢˜å˜é‡å®šä¹‰ */
.page.light {
  --bg-page: #f5f5f5;
  --bg-card: #ffffff;
  --text-primary: #333333;
  --text-secondary: #666666;
  --border-color: #dddddd;
  --active-color: #09b83e;
  --shadow: rgba(0, 0, 0, 0.05);
}

.page.dark-mode {
  --bg-page: #1a1a1a;
  --bg-card: #2d2d2d;
  --text-primary: #f0f0f0;
  --text-secondary: #999999;
  --border-color: #3a3a3a;
  --active-color: #07a02e;
  --shadow: rgba(0, 0, 0, 0.3);
}

/* é¡µé¢å®¹å™¨ */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--bg-page);
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/* é¡¶éƒ¨å¤´éƒ¨ */
.header {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 20rpx;
  background-color: var(--bg-card);
  border-bottom: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 4rpx var(--shadow);
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
  text-align: center;
}

.back-btn {
  width: 80rpx;
  height: 56rpx;
  border-radius: 8rpx;
  background: transparent;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: var(--active-color);
  border: none;
}

.back-btn:active {
  background: rgba(9, 184, 62, 0.1);
}

.header-placeholder {
  width: 80rpx;
}

/* è¿›åº¦æ¡ */
.progress {
  flex: 0 0 auto;
  padding: 30rpx 40rpx;
}

.progress-text {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 4rpx;
  background: var(--border-color);
  border-radius: 2rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--active-color);
  transition: width 0.3s ease;
}

/* å†…å®¹åŒº */
.content {
  flex: 1 1 auto;
  padding: 40rpx;
  overflow-y: auto;
}

.content-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.content-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

/* èº«ä»½é€‰é¡¹å¡ - æ›¿æ¢ gap ä¸º margin */
.identity-options {
  display: flex;
  flex-direction: column;
}

.identity-card {
  position: relative;
  padding: 32rpx 24rpx;
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  margin-bottom: 24rpx;
}

.identity-card:last-child {
  margin-bottom: 0;
}

.identity-card:active {
  transform: scale(0.98);
}

.identity-card.active {
  border-color: var(--active-color);
  background: linear-gradient(135deg, 
    rgba(9, 184, 62, 0.05) 0%, 
    rgba(9, 184, 62, 0.02) 100%);
  box-shadow: 0 0 12rpx rgba(9, 184, 62, 0.2);
}

.card-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.card-description {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.card-checkbox {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.checkbox {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--active-color);
  border-color: var(--active-color);
}

.checkbox.checked::before {
  content: 'âœ“';
  color: white;
  font-size: 16rpx;
  font-weight: bold;
}

/* åº•éƒ¨æŒ‰é’® */
.footer {
  flex: 0 0 auto;
  padding: 30rpx 40rpx 40rpx;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-color);
}

.confirm-btn {
  width: 100%;
  height: 100rpx;
  background: var(--active-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn:active:not(.disabled) {
  background: rgba(7, 160, 46, 0.9);
  transform: scale(0.98);
}

.confirm-btn.disabled {
  background: var(--border-color);
  color: var(--text-secondary);
  opacity: 0.6;
}

