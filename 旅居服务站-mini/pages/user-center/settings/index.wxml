<!-- 设置页面 -->
<view class="page {{theme === 'dark' ? 'dark-mode' : ''}} {{appVersion === 'elderly' ? 'elderly-mode' : ''}}">
  <!-- 导航栏 -->
  <view class="page-header">
    <view class="back-btn" bindtap="goBack">返回</view>
    <text class="page-title">设置</text>
    <view class="placeholder"></view>
  </view>

  <!-- 内容区域 -->
  <view class="content">
    <!-- 主题设置 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">主题设置</text>
      </view>
      <view class="theme-options">
        <view 
          class="theme-item {{theme === 'light' ? 'active' : ''}}"
          bindtap="switchTheme"
          data-theme="light"
        >
          <text class="theme-icon">☀️</text>
          <text class="theme-name">浅色模式</text>
        </view>
        <view 
          class="theme-item {{theme === 'dark' ? 'active' : ''}}"
          bindtap="switchTheme"
          data-theme="dark"
        >
          <text class="theme-icon">🌙</text>
          <text class="theme-name">深色模式</text>
        </view>
      </view>
    </view>

    <!-- 应用版本 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">应用版本</text>
      </view>
      <view class="version-options">
        <view 
          class="version-item {{appVersion === 'standard' ? 'active' : ''}}"
          bindtap="switchAppVersion"
          data-version="standard"
        >
          <text class="version-icon">📱</text>
          <text class="version-name">标准版</text>
        </view>
        <view 
          class="version-item {{appVersion === 'elderly' ? 'active' : ''}}"
          bindtap="switchAppVersion"
          data-version="elderly"
        >
          <text class="version-icon">👵</text>
          <text class="version-name">老人版</text>
        </view>
      </view>
    </view>

    <!-- 其他设置 -->
    <view class="section">
      <view class="setting-list">
        <view class="setting-item" bindtap="goToEditProfile">
          <text class="setting-label">编辑资料</text>
          <text class="setting-arrow">›</text>
        </view>
        <view class="setting-item" bindtap="clearCache">
          <text class="setting-label">清除缓存</text>
          <text class="setting-arrow">›</text>
        </view>
        <view class="setting-item" bindtap="aboutUs">
          <text class="setting-label">关于我们</text>
          <text class="setting-arrow">›</text>
        </view>
      </view>
    </view>
  </view>
</view>