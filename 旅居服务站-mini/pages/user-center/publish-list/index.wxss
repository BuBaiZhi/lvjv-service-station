/* 我的发布页面样式 */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-header .add-icon {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  color: #1890ff;
}

/* 标签栏 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 发布列表 */
.content {
  padding: 20rpx;
}

.publish-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.publish-image {
  width: 100%;
  height: 300rpx;
}

.publish-image-placeholder {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
}

.publish-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.publish-bg-2 {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.publish-bg-3 {
  background: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
}

.publish-info {
  padding: 30rpx;
}

.publish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.publish-title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.publish-status {
  font-size: 13px;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.publish-status.active {
  color: #52c41a;
  background: #f6ffed;
}

.publish-status.ended {
  color: #999;
  background: #f5f5f5;
}

.publish-meta {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.meta-item {
  font-size: 13px;
  color: #666;
}

.publish-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 13px;
  color: #1890ff;
  border: 1px solid #1890ff;
  background: #fff;
}

.action-btn.delete {
  color: #ff4d4f;
  border-color: #ff4d4f;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80px;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 15px;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  padding: 16rpx 48rpx;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 24rpx;
}

/* 深色模式 */
.dark-mode .page {
  background-color: #1a1a1a;
}

.dark-mode .tabs,
.dark-mode .publish-card {
  background: #2a2a2a;
  border-color: #3a3a3a;
}

.dark-mode .publish-title {
  color: #f0f0f0;
}

.dark-mode .publish-meta {
  border-color: #3a3a3a;
}

.dark-mode .action-btn {
  background: #333;
}
