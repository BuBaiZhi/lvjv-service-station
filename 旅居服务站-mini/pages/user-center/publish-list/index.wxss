/* 我的发布页面样式 */

/* 主题变量定义 */
.page.light {
  --bg-page: #f5f5f5;
  --bg-card: #ffffff;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
  --border-color: #f0f0f0;
}

.page.dark-mode {
  --bg-page: #1a1a1a;
  --bg-card: #2a2a2a;
  --text-primary: #f0f0f0;
  --text-secondary: #999;
  --text-tertiary: #666;
  --border-color: #3a3a3a;
}

.page {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-primary);
}

.page-header .add-icon {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  color: #1890ff;
}

/* 标签栏 */
.tabs {
  display: flex;
  background: var(--bg-card);
  padding: 20rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: var(--text-secondary);
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 发布列表 */
.content {
  padding: 20rpx;
}

.publish-card {
  background: var(--bg-card);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.publish-image {
  width: 100%;
  height: 300rpx;
}

.publish-image-placeholder {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
}

.publish-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.publish-bg-2 {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.publish-bg-3 {
  background: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
}

.publish-info {
  padding: 30rpx;
}

.publish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.publish-title {
  font-size: 17px;
  font-weight: 500;
  color: var(--text-primary);
  flex: 1;
}

.publish-status {
  font-size: 13px;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.publish-status.active {
  color: #52c41a;
  background: #f6ffed;
}

.page.dark-mode .publish-status.active {
  background: #1a3a1a;
}

.publish-status.ended {
  color: var(--text-tertiary);
  background: var(--bg-page);
}

.publish-meta {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1px solid var(--border-color);
  border-bottom: 1px solid var(--border-color);
}

.meta-item {
  font-size: 13px;
  color: var(--text-secondary);
}

.publish-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 13px;
  color: #1890ff;
  border: 1px solid #1890ff;
  background: transparent;
}

.page.light .action-btn {
  background: #ffffff;
}

.page.dark-mode .action-btn {
  background: #333;
}

.action-btn.delete {
  color: #ff4d4f;
  border-color: #ff4d4f;
}

.page.dark-mode .action-btn.delete {
  color: #ff7875;
  border-color: #ff7875;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80px;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 15px;
  color: var(--text-tertiary);
  margin-bottom: 40rpx;
}

.btn-primary {
  padding: 16rpx 48rpx;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 24rpx;
}

/* 老人友好版 */
.elderly-mode .tab-item {
  font-size: 18px;
}

.elderly-mode .publish-card {
  padding: 40rpx;
}

.elderly-mode .publish-image {
  width: 240rpx;
  height: 240rpx;
}

.elderly-mode .publish-title {
  font-size: 36rpx;
}

.elderly-mode .publish-meta {
  font-size: 28rpx;
}

.elderly-mode .publish-status {
  font-size: 28rpx;
}

.elderly-mode .action-btn {
  font-size: 18px;
  padding: 20rpx 40rpx;
}

.elderly-mode .empty-text {
  font-size: 36rpx;
}
