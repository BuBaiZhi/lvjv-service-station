/* 服务与支持页面样式 */

/* 主题变量定义 */
.page.light {
  --bg-page: #f5f5f5;
  --bg-card: #fff;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
  --text-light: #ccc;
  --border-color: #f0f0f0;
}

.page.dark-mode {
  --bg-page: #1a1a1a;
  --bg-card: #2a2a2a;
  --text-primary: #f0f0f0;
  --text-secondary: #999;
  --text-tertiary: #ccc;
  --text-light: #666;
  --border-color: #3a3a3a;
}

.page {
  min-height: 100vh;
  background-color: var(--bg-page);
  padding-bottom: 30rpx;
  color: var(--text-primary);
}

.content {
  padding: 20rpx;
}

/* 区块 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  padding: 20rpx 0;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

/* 常见问题 */
.faq-list {
  background: var(--bg-card);
  border-radius: 12rpx;
  overflow: hidden;
}

.faq-item {
  border-bottom: 1px solid var(--border-color);
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  cursor: pointer;
}

.question-text {
  flex: 1;
  font-size: 15px;
  color: var(--text-primary);
  font-weight: 500;
}

.expand-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #1890ff;
  margin-left: 20rpx;
}

.faq-answer {
  padding: 0 30rpx 30rpx;
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.8;
}

.faq-answer[hidden] {
  display: none;
}

/* 联系我们 */
.contact-list {
  background: var(--bg-card);
  border-radius: 12rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid var(--border-color);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  font-size: 48px;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-title {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
}

.contact-content {
  font-size: 15px;
  color: #1890ff;
}

.contact-desc {
  font-size: 13px;
  color: var(--text-tertiary);
}

.arrow {
  font-size: 20px;
  color: var(--text-light);
  margin-left: 20rpx;
}

/* 意见反馈 */
.feedback-card {
  background: var(--bg-card);
  border-radius: 12rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.feedback-tip {
  font-size: 15px;
  color: var(--text-secondary);
}

.btn-primary {
  width: 200rpx;
  height: 44px;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 15px;
}

/* 版本信息 */
.version-info {
  background: var(--bg-card);
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.version-label {
  font-size: 15px;
  color: var(--text-secondary);
}

.version-number {
  font-size: 15px;
  color: var(--text-tertiary);
}

/* 老人友好版 */
.elderly-mode .section-title {
  font-size: 28rpx;
}

.elderly-mode .faq-question,
.elderly-mode .contact-item {
  padding: 40rpx;
}

.elderly-mode .question-text,
.elderly-mode .contact-title {
  font-size: 32rpx;
}

.elderly-mode .faq-answer,
.elderly-mode .contact-desc,
.elderly-mode .contact-content {
  font-size: 28rpx;
}

.elderly-mode .feedback-tip {
  font-size: 32rpx;
}

.elderly-mode .btn-primary {
  height: 80rpx;
  font-size: 32rpx;
}

.elderly-mode .version-label,
.elderly-mode .version-number {
  font-size: 28rpx;
}
