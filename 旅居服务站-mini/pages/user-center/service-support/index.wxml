<!-- 服务与支持页面 -->
<view class="page {{theme === 'dark' ? 'dark-mode' : ''}} {{appVersion === 'elderly' ? 'elderly-mode' : ''}}">
  <!-- 导航栏 -->
  <view class="page-header">
    <view class="back-btn" bindtap="goBack">返回</view>
    <text class="page-title">服务与支持</text>
    <view class="placeholder"></view>
  </view>

  <!-- 内容区域 -->
  <view class="content">
    <!-- 常见问题 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">常见问题</text>
      </view>

      <view class="faq-list">
        <view 
          class="faq-item {{item.expanded ? 'expanded' : ''}}"
          wx:for="{{faqList}}"
          wx:key="id"
          bindtap="toggleFaq"
          data-id="{{item.id}}"
        >
          <view class="faq-question">
            <text class="question-text">{{item.question}}</text>
            <text class="expand-icon">{{item.expanded ? '−' : '+'}}</text>
          </view>
          <view class="faq-answer" hidden="{{!item.expanded}}">
            <text>{{item.answer}}</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 联系我们 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">联系我们</text>
      </view>

      <view class="contact-list">
        <view 
          class="contact-item"
          wx:for="{{contactMethods}}"
          wx:key="id"
          bindtap="contactService"
          data-method="{{item.id === 1 ? 'phone' : item.id === 2 ? 'email' : 'chat'}}"
        >
          <text class="contact-icon">{{item.icon}}</text>
          <view class="contact-info">
            <text class="contact-title">{{item.title}}</text>
            <text class="contact-content">{{item.content}}</text>
            <text class="contact-desc">{{item.desc}}</text>
          </view>
          <text class="arrow">→</text>
        </view>
      </view>
    </view>

    <!-- 意见反馈 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">意见反馈</text>
      </view>

      <view class="feedback-card">
        <text class="feedback-tip">您的反馈对我们很重要</text>
        <button class="btn-primary" bindtap="submitFeedback">提交反馈</button>
      </view>
    </view>

    <!-- 版本信息 -->
    <view class="section">
      <view class="version-info">
        <text class="version-label">当前版本</text>
        <text class="version-number">v1.0.0</text>
      </view>
    </view>
  </view>
</view>
