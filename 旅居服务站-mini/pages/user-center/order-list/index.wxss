/* 我的交易页面样式 */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 标签栏 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 订单列表 */
.content {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-type {
  font-size: 14px;
  color: #666;
}

.order-status {
  font-size: 14px;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  color: #faad14;
  background: #fff7e6;
}

.order-status.ongoing {
  color: #1890ff;
  background: #e6f7ff;
}

.order-status.completed {
  color: #52c41a;
  background: #f6ffed;
}

.order-content {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.order-image-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}

.order-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.order-bg-2 {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.order-bg-3 {
  background: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.order-date {
  font-size: 13px;
  color: #999;
}

.order-price {
  font-size: 18px;
  font-weight: 600;
  color: #ff4d4f;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.btn-secondary,
.btn-primary {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 13px;
}

.btn-secondary {
  color: #666;
  border: 1px solid #d9d9d9;
  background: #fff;
}

.btn-primary {
  color: #fff;
  background: #1890ff;
  border: none;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80px;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 15px;
  color: #999;
}

/* 深色模式 */
.dark-mode .page {
  background-color: #1a1a1a;
}

.dark-mode .tabs,
.dark-mode .order-card {
  background: #2a2a2a;
  border-color: #3a3a3a;
}

.dark-mode .order-title {
  color: #f0f0f0;
}

.dark-mode .btn-secondary {
  background: #333;
  border-color: #555;
  color: #ccc;
}
