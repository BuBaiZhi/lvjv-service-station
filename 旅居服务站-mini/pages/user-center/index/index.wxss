/* 用户中心首页样式 */

/* 主题变量定义 */
.page.light {
  --bg-page: #f5f5f5;
  --bg-card: #fff;
  --text-primary: #333;
  --text-tertiary: #999;
  --text-light: #ccc;
  --border-color: #f5f5f5;
  --border-light: #f0f0f0;
  --primary-color: #667eea;
}

.page.dark-mode {
  --bg-page: #1a1a1a;
  --bg-card: #2a2a2a;
  --text-primary: #f0f0f0;
  --text-tertiary: #666;
  --text-light: #333;
  --border-color: #3a3a3a;
  --border-light: #3a3a3a;
  --primary-color: #667eea;
}

.page {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-primary);
}

/* 未登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.login-avatar-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: var(--text-light);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.login-avatar-placeholder {
  font-size: 80rpx;
  color: #999;
}

.login-avatar {
  width: 100%;
  height: 100%;
}

.login-hint {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-bottom: 40rpx;
}

.login-buttons {
  display: flex;
  gap: 20rpx;
}

.login-btn {
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-align: center;
}

.login-btn.primary {
  background: var(--primary-color);
  color: #fff;
}

.login-btn:active {
  opacity: 0.8;
}

/* 菜单禁用状态 */
.menu-item.disabled {
  opacity: 0.5;
}

/* 用户卡片 */
.user-card {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  overflow: hidden;
}

.user-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 0;
}

.user-card[style*="background-image"] .user-card-bg {
  opacity: 0;
}

.user-card[style*="background-image"] {
  background: none;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.user-avatar-placeholder {
  display: none;
}

.user-info {
  flex: 1;
  min-width: 0;
  position: relative;
  z-index: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
}

.identity-badge {
  padding: 6rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

.user-meta-row {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin-bottom: 12rpx;
}

.user-gender,
.user-age,
.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.user-signature {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 编辑资料按钮条 */
.edit-profile-bar {
  background: var(--bg-card);
  padding: 20rpx 40rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
  border-radius: 0 0 20rpx 20rpx;
}

.edit-profile-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.edit-profile-btn text {
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
}

/* 统计数据 */
.stats-section {
  background: var(--bg-card);
  display: flex;
  padding: 50rpx 0;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.page.dark-mode .stats-section {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.stat-label {
  font-size: 13px;
  color: var(--text-tertiary);
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: var(--border-light);
}

/* 功能菜单 */
.menu-section {
  background: var(--bg-card);
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 44rpx;
}

.menu-title {
  font-size: 15px;
  color: var(--text-primary);
}

.menu-arrow {
  font-size: 36rpx;
  color: var(--text-light);
}

/* 老人友好版 */
.elderly-mode .user-nickname {
  font-size: 48rpx;
}

.elderly-mode .stat-value {
  font-size: 54rpx;
}

.elderly-mode .stat-label {
  font-size: 28rpx;
}

.elderly-mode .menu-item {
  padding: 48rpx 40rpx;
}

.elderly-mode .menu-title {
  font-size: 28rpx;
}

.elderly-mode .menu-icon {
  font-size: 54rpx;
}

.elderly-mode .menu-arrow {
  font-size: 44rpx;
}
