/* 用户中心首页样式 */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户卡片 */
.user-card {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  overflow: hidden;
}

.user-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 0;
}

.user-card[style*="background-image"] .user-card-bg {
  opacity: 0;
}

.user-card[style*="background-image"] {
  background: none;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.user-avatar-placeholder {
  display: none;
}

.user-info {
  flex: 1;
  min-width: 0;
  position: relative;
  z-index: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
}

.identity-badge {
  padding: 6rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

.user-meta-row {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin-bottom: 12rpx;
}

.user-gender,
.user-age,
.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.user-signature {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 编辑资料按钮条 */
.edit-profile-bar {
  background: #fff;
  padding: 20rpx 40rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
  border-radius: 0 0 20rpx 20rpx;
}

.edit-profile-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.edit-profile-btn text {
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
}

/* 统计数据 */
.stats-section {
  background: #fff;
  display: flex;
  padding: 50rpx 0;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #333;
}

.stat-label {
  font-size: 13px;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #f0f0f0;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 44rpx;
}

.menu-title {
  font-size: 15px;
  color: #333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 深色模式 */
.dark-mode .page {
  background-color: #1a1a1a;
}

.dark-mode .stats-section,
.dark-mode .menu-section {
  background: #2a2a2a;
}

.dark-mode .stat-value,
.dark-mode .menu-title {
  color: #f0f0f0;
}

.dark-mode .menu-item {
  border-color: #3a3a3a;
}