/* 编辑资料页面样式 */

/* 主题变量定义 */
.page.light {
  --bg-page: #f5f5f5;
  --bg-card: #fff;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
  --border-color: #e0e0e0;
  --input-bg: transparent;
}

.page.dark-mode {
  --bg-page: #1a1a1a;
  --bg-card: #2a2a2a;
  --text-primary: #f0f0f0;
  --text-secondary: #ccc;
  --text-tertiary: #999;
  --border-color: #444;
  --input-bg: #333;
}

.page {
  min-height: 100vh;
  background-color: var(--bg-page);
  padding-bottom: 30rpx;
  color: var(--text-primary);
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  overflow: hidden;
}

.user-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
  z-index: 1;
}

.user-info {
  flex: 1;
  min-width: 0;
  position: relative;
  z-index: 1;
}

/* 更换背景按钮 */
.change-bg-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  z-index: 2;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 30rpx;
}

.change-bg-btn text {
  font-size: 24rpx;
  color: #fff;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.identity-badge {
  padding: 4rpx 16rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.user-meta-row {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.user-gender,
.user-age,
.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 表单区域 */
.form-section {
  padding: 20rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 44px;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 15px;
  background: var(--input-bg);
  color: var(--text-primary);
}

.input:focus {
  border-color: #1890ff;
}

.form-item {
  background: var(--bg-card);
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 头像 */
.avatar-wrapper,
.avatar-edit-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avatar-large {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.change-tip {
  font-size: 26rpx;
  color: #1890ff;
}

/* 性别选择器 */
.gender-picker {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  font-size: 15px;
  color: var(--text-secondary);
  background: var(--input-bg);
  transition: all 0.3s;
}

.gender-item.active {
  border-color: #1890ff;
  background-color: #e6f7ff;
  color: #1890ff;
}

.page.dark-mode .gender-item.active {
  background-color: #1a3a5a;
}

/* 文本域 */
.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 15px;
  background: var(--input-bg);
  color: var(--text-primary);
}

.textarea:focus {
  border-color: #1890ff;
}

.char-count {
  text-align: right;
  font-size: 12px;
  color: var(--text-tertiary);
  margin-top: 10rpx;
}

/* 按钮 */
.btn-wrapper {
  margin-top: 40rpx;
}

/* 老人友好版 */
.elderly-mode .user-nickname {
  font-size: 44rpx;
}

.elderly-mode .label {
  font-size: 36rpx;
}

.elderly-mode .input,
.elderly-mode .textarea {
  height: 60px;
  font-size: 20px;
}

.elderly-mode .gender-item {
  height: 60px;
  font-size: 20px;
}

.elderly-mode .change-tip {
  font-size: 32rpx;
}

.elderly-mode .char-count {
  font-size: 20px;
}
