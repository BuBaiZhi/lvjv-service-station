/* 首页样式 */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-input {
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.search-placeholder {
  font-size: 14px;
  color: #999;
}

/* 轮播图 */
.banner-section {
  padding: 20rpx;
}

.banner-swiper {
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 轮播图占位符 */
.banner-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
}

.banner-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.banner-bg-2 {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.banner-bg-3 {
  background: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
}

.banner-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #fff;
}

/* 分类菜单 */
.category-section {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.category-icon {
  font-size: 64rpx;
}

.category-name {
  font-size: 14px;
  color: #333;
}

/* 热门推荐 */
.hot-section {
  padding: 0 20rpx;
}

.section-header {
  padding: 30rpx 0 20rpx;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.hot-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.hot-image {
  width: 100%;
  height: 360rpx;
}

/* 热门推荐占位符 */
.hot-image-placeholder {
  width: 100%;
  height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hot-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.hot-bg-2 {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.hot-bg-3 {
  background: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
}

.hot-type-icon {
  font-size: 100rpx;
}

.hot-info {
  padding: 24rpx;
}

.hot-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.hot-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 12px;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.hot-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-type {
  font-size: 13px;
  color: #999;
}

.hot-price {
  font-size: 20px;
  font-weight: 600;
  color: #ff4d4f;
}

/* 深色模式 */
.dark-mode .page {
  background-color: #1a1a1a;
}

.dark-mode .search-bar,
.dark-mode .category-section,
.dark-mode .hot-card {
  background: #2a2a2a;
}

.dark-mode .search-input {
  background: #333;
}

.dark-mode .section-title,
.dark-mode .category-name,
.dark-mode .hot-title {
  color: #f0f0f0;
}