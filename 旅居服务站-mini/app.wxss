/** app.wxss - 全局样式 **/

/* 基础样式 */
page {
  background-color: #F5F5F5;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
}

/* 容器 */
.container {
  padding: 20rpx;
}

/* 卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  background: #007AFF;
  color: #fff;
}

.btn:active {
  opacity: 0.8;
}

/* 输入框 */
.input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 页面头部 */
.page-header {
  height: 56px;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.page-header .title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 返回按钮 */
.btn-back {
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  font-size: 40rpx;
  color: #007AFF;
  cursor: pointer;
}

/* 返回文字按钮 */
.back-btn {
  width: 100rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #1890ff;
}

/* 列表项 */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ========================================
   深色模式样式
   ======================================== */

page.dark {
  background-color: #1a1a1a;
  color: #f0f0f0;
}

page.dark .card,
page.dark .list-item,
page.dark .page-header {
  background-color: #2d2d2d;
  color: #f0f0f0;
}

page.dark .page-title,
page.dark .title {
  color: #f0f0f0;
}

page.dark .input {
  background-color: #2d2d2d;
  border-color: #3a3a3a;
  color: #f0f0f0;
}

page.dark .back-btn {
  color: #1890ff;
}

/* ========================================
   老人版样式（放大）
   ======================================== */

page.elderly {
  font-size: 36rpx !important;
  line-height: 1.8 !important;
}

page.elderly .btn {
  height: 112rpx !important;
  font-size: 36rpx !important;
  border-radius: 56rpx !important;
}

page.elderly .page-title {
  font-size: 44rpx !important;
}

page.elderly .back-btn {
  font-size: 38rpx !important;
}

page.elderly .input {
  height: 100rpx !important;
  font-size: 36rpx !important;
  padding: 0 30rpx !important;
}

page.elderly .card {
  padding: 32rpx !important;
  margin-bottom: 32rpx !important;
}

page.elderly .list-item {
  padding: 32rpx !important;
}

page.elderly .btn-back {
  font-size: 48rpx !important;
}

page.elderly .empty-icon {
  font-size: 120rpx !important;
}

page.elderly .empty-text {
  font-size: 36rpx !important;
}
