.section {
  padding: 24rpx 32rpx;
}

.search-bar {
  padding: 16rpx 0 24rpx;
}

.search-input {
  background-color: #ffffff;
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
}

.type-tabs {
  display: flex;
  flex-direction: row;
  margin-bottom: 16rpx;
}

.type-item {
  padding: 10rpx 20rpx;
  margin-right: 12rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666666;
  background-color: #f5f5f5;
}

.type-item.active {
  color: #ffffff;
  background-color: #07c160;
}

.task-card {
  margin-top: 16rpx;
}

.location {
  font-size: 24rpx;
  color: #888888;
}

.publisher {
  font-size: 24rpx;
  color: #666666;
}

.extra {
  margin-top: 6rpx;
}

.tag-alt {
  margin-left: 8rpx;
}

.empty-card {
  align-items: center;
  justify-content: center;
}
