.section {
  padding: 24rpx 32rpx;
}

.tabs {
  margin-bottom: 12rpx;
}
.tab {
  margin-right: 20rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
}
.tab.active {
  background-color: #07c160;
  color: #ffffff;
}
.spacer {
  flex: 1;
}

.search-bar {
  margin-bottom: 12rpx;
}

.resource-card .title {
  font-size: 30rpx;
  font-weight: 600;
}
.resource-card .type {
  font-size: 24rpx;
  color: #07c160;
}
.resource-card .location,
.resource-card .contact {
  font-size: 24rpx;
  color: #666666;
}
.resource-card .desc {
  margin-top: 8rpx;
  font-size: 24rpx;
}
.tag {
  margin-right: 8rpx;
  margin-top: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
  font-size: 22rpx;
}
.actions {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
