.search-bar {
  padding: 16rpx 0 24rpx;
}

.search-input {
  background-color: #ffffff;
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
}

.banner {
  height: 260rpx;
  margin-bottom: 24rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.section-header {
  align-items: center;
  margin-bottom: 8rpx;
}

.more {
  font-size: 24rpx;
  color: #07c160;
}

.entry-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.entry {
  flex: 1;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-right: 16rpx;
}

.entry:last-child {
  margin-right: 0;
}

.entry-title {
  font-size: 30rpx;
  font-weight: 600;
}

.entry-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

.task-card {
  margin-top: 16rpx;
}

.location {
  font-size: 24rpx;
  color: #888888;
}

.extra {
  margin-top: 6rpx;
}

.tag-alt {
  margin-left: 8rpx;
}

.video-card {
  margin-top: 16rpx;
}

.thumb {
  width: 220rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.publisher {
  font-size: 24rpx;
  color: #888888;
}

.meta {
  font-size: 22rpx;
  color: #999999;
}
