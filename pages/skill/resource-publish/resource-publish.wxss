.section {
  padding: 24rpx 32rpx;
}

.tabs {
  display: flex;
  flex-direction: row;
  margin-left: 12rpx;
}
.tab {
  margin-right: 12rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
}
.tab.active {
  background-color: #07c160;
  color: #ffffff;
}
.form-item {
  margin-top: 12rpx;
}
.label {
  font-size: 26rpx;
  color: #666666;
}
.input {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-top: 8rpx;
}
.textarea {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  min-height: 160rpx;
}
