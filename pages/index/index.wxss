.container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部 */
.header {
  padding: 30rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  display: flex;
  align-items: center;
}

.search-bar {
  flex: 1;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 16rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-text {
  font-size: 28rpx;
  color: #999;
}

/* 发布房源按钮 */
.publish-house-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 36rpx;
  color: white;
}

.filter-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* 轮播图 */
.banner {
  padding: 30rpx;
  white-space: nowrap;
}

.banner-list {
  display: inline-block;
}

.banner-item {
  display: inline-block;
  width: 600rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.banner-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 分类 */
.categories {
  background: white;
  padding: 30rpx;
  display: flex;
  margin: 0 30rpx 30rpx;
  border-radius: 24rpx;
}

.category-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  background: rgba(30, 61, 76, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 26rpx;
  color: #333;
}

/* 房源列表 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3d4c;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

.house-list {
  padding: 0 30rpx;
}

.house-card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  display: flex;
  padding: 20rpx;
}

.house-image {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  margin-right: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.house-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(255, 70, 70, 0.9);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.house-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.house-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 8rpx;
}

.house-location {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.house-price {
  margin-bottom: 12rpx;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.house-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #6b8c7d;
  background: rgba(107, 140, 125, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.footer-placeholder {
  height: 20rpx;
}

/* 地区选择器 */
.region-selector {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.region-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.region-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  flex: 1;
}

.region-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 房源卡片头部（标题+点赞） */
.house-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.house-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3d4c;
  flex: 1;
  margin-right: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.house-likes {
  font-size: 24rpx;
  color: #ff6b6b;
  white-space: nowrap;
}

/* 地区选择弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  animation: slideUp 0.3s ease;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.region-list {
  width: 100%;
}

.region-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.region-item:last-child {
  border-bottom: none;
}

.region-name {
  font-size: 28rpx;
  color: #333;
}

.region-item.active .region-name {
  color: #1e3d4c;
  font-weight: 600;
}

.region-check {
  font-size: 32rpx;
  color: #1e3d4c;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}