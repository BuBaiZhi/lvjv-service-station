<view class="container {{theme === 'dark' ? 'dark' : ''}} {{elderMode ? 'elder-mode' : ''}}" data-theme="{{theme}}" data-elder="{{elderMode ? 'true' : 'false'}}">
  <!-- 背景装饰 -->
  <view class="bg-decorations">
    <image class="bg-mountain" src="/images/backgrounds/山脉.jpg" mode="aspectFill"></image>
  </view>
  
  <view class="section">
  <block wx:for="{{sessionList}}" wx:key="id">
    <view class="card session-card" bindtap="gotoChat" data-id="{{item.id}}">
      <view class="row-between">
        <view class="row">
          <image class="avatar" src="{{item.avatar}}" mode="aspectFill" />
          <view class="info">
            <text class="nickname">{{item.nickname}}</text>
            <text class="last">{{item.lastMessage}}</text>
          </view>
        </view>
        <view class="meta">
          <text class="time">{{item.time}}</text>
          <view class="badge" wx:if="{{item.unread > 0}}">
            <text>{{item.unread}}</text>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>
</view>
