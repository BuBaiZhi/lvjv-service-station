.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.search-bar {
  background: white;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-box {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.filter-tab {
  padding: 8rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-tab.active {
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
}

.user-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.user-item {
  display: flex;
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name-line {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.user-role {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.user-role.nomad {
  background: rgba(30, 61, 76, 0.1);
  color: #1e3d4c;
}

.user-role.villager {
  background: rgba(107, 140, 125, 0.1);
  color: #6b8c7d;
}

.user-role.admin {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}

.user-status {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.user-status.active {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.user-status.disabled {
  background: rgba(158, 158, 158, 0.1);
  color: #999;
}

.user-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.user-stats {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 操作弹窗 */
.action-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  animation: slideUp 0.3s ease;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.action-list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.action-list-item:active {
  background: #f0f0f0;
}

.action-list-item.delete {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}

.action-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.action-text {
  font-size: 28rpx;
  flex: 1;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}