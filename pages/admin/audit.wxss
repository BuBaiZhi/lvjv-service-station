.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.audit-tabs {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1e3d4c;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1e3d4c;
  border-radius: 2rpx;
}

.badge {
  display: inline-block;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
  padding: 0 8rpx;
}

.audit-list {
  padding: 20rpx;
}

.audit-item {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  display: block;
  margin-bottom: 4rpx;
}

.author-role {
  font-size: 22rpx;
  color: #999;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 16rpx;
}

.item-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.item-images {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 22rpx;
  color: #6b8c7d;
  background: rgba(107, 140, 125, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

/* 房源预览 */
.house-preview {
  display: flex;
  margin-bottom: 20rpx;
}

.house-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.house-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.house-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 8rpx;
  display: block;
}

.house-location {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.house-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  display: block;
}

.item-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.audit-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.approve-btn, .reject-btn, .detail-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  border-radius: 36rpx;
  margin: 0;
  padding: 0;
}

.approve-btn {
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
}

.reject-btn {
  background: #ff6b6b;
  color: white;
}

.detail-btn {
  background: #f0f0f0;
  color: #666;
}

.approve-btn::after, .reject-btn::after, .detail-btn::after {
  border: none;
}

/* 审核统计 */
.audit-stats {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
}