.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 搜索框 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
  z-index: 100;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.clear-btn {
  font-size: 32rpx;
  color: #999;
  padding: 0 10rpx;
}

.cancel-btn {
  font-size: 28rpx;
  color: #1e3d4c;
}

/* 地图区域 */
.map-section {
  position: relative;
  height: 500rpx;
  background: #e5e5e5;
}

.map {
  width: 100%;
  height: 100%;
}

/* 中心定位图标（美团外卖风格） */
.center-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -100%);
  z-index: 10;
  pointer-events: none;
}

.marker-dot {
  width: 16rpx;
  height: 16rpx;
  background: #1e3d4c;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(30, 61, 76, 0.3);
}

.marker-circle {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(30, 61, 76, 0.2);
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 当前位置按钮 */
.current-location-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 20;
}

.locate-icon {
  font-size: 40rpx;
}

/* 地点列表 */
.places-list {
  flex: 1;
  background: white;
  display: flex;
  flex-direction: column;
}

.places-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.places-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.places-scroll {
  flex: 1;
  padding: 0 30rpx;
}

.place-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.place-item:active {
  background: #f8f8f8;
}

.place-info {
  flex: 1;
  margin-right: 30rpx;
}

.place-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.place-address {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.place-distance {
  font-size: 24rpx;
  color: #6b8c7d;
}

/* 底部确认栏（美团外卖风格） */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.selected-info {
  flex: 1;
  margin-right: 30rpx;
}

.selected-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 4rpx;
}

.selected-address {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.confirm-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 36rpx;
  margin: 0;
  padding: 0;
}

.confirm-btn::after {
  border: none;
}