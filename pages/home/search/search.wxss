/* 房源搜索页面样式 */
.search-page {
  min-height: 100vh;
  background-color: var(--color-background, #f9fbf8);
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: var(--color-background-card, #ffffff);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: var(--color-background, #f5f5f5);
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-btn {
  font-size: 28rpx;
  color: #999;
  padding: 8rpx;
}

.cancel-btn {
  font-size: 28rpx;
  color: var(--color-primary, #1e3d4c);
  margin-left: 20rpx;
}

/* 搜索结果 */
.search-results {
  padding: 20rpx 30rpx;
}

.result-item {
  display: flex;
  background-color: var(--color-background-card, #ffffff);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.result-image {
  width: 180rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text-primary, #333);
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.result-location {
  font-size: 24rpx;
  color: var(--color-text-secondary, #666);
}

.result-price {
  font-size: 28rpx;
  color: var(--color-accent, #ff6b6b);
  font-weight: 600;
}

/* 搜索历史 */
.search-history, .hot-search {
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text-primary, #333);
}

.clear-history {
  font-size: 24rpx;
  color: var(--color-text-secondary, #999);
}

.history-tags, .hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag, .hot-tag {
  padding: 12rpx 24rpx;
  background-color: var(--color-background-card, #ffffff);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--color-text-primary, #333);
}

.hot-tag {
  background-color: var(--color-secondary, #e8f5e9);
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  padding: 60rpx;
  color: var(--color-text-secondary, #999);
}

/* 无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.no-result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-result-text {
  font-size: 28rpx;
  color: var(--color-text-secondary, #999);
}

/* 老年模式 */
.elder-mode .search-input {
  font-size: 36rpx;
}

.elder-mode .result-title {
  font-size: 36rpx;
}

.elder-mode .result-price {
  font-size: 34rpx;
}
