/* 首页样式 */

/* 页面背景 - 整体渐变 */
page {
  background: linear-gradient(180deg, #E8F5E9 0%, #F5F5F5 100%);
}

/* 背景装饰层 */
.bg-decorations {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  pointer-events: none;
}

/* 顶部波浪装饰 */
.bg-wave {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 250rpx;
  opacity: 0.6;
}

/* 云朵装饰 - 右上角 */
.bg-cloud {
  position: absolute;
  top: 120rpx;
  right: 30rpx;
  width: 200rpx;
  height: 140rpx;
  opacity: 0.5;
}

/* 山脉装饰 - 底部 */
.bg-mountain {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  height: 350rpx;
  opacity: 0.25;
}

/* 内容层 - 确保在背景之上 */
.nav-bar,
.banner-scroll,
.card,
.section-header,
.house-list {
  position: relative;
  z-index: 1;
}

/* 导航图标按钮 */
.nav-icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 32rpx;
}

.nav-icon-img {
  width: 40rpx;
  height: 40rpx;
}

/* 轮播图 */
.banner-scroll {
  padding: 30rpx 30rpx 20rpx;
}

.banner-list {
  display: flex;
  gap: 20rpx;
}

.banner-item {
  flex-shrink: 0;
  width: 600rpx;
  height: 280rpx;
  border-radius: 28rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 8rpx 24rpx rgba(74, 122, 92, 0.1);
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(74, 122, 92, 0.8), transparent);
  padding: 50rpx 20rpx 20rpx;
}

.banner-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  display: block;
}

.banner-desc {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
}

/* 分类 */
.category-card {
  margin: 0 30rpx 20rpx;
}

.category-list {
  display: flex;
  justify-content: space-around;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  font-size: 48rpx;
}

.category-icon-img {
  width: 64rpx;
  height: 64rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--color-text);
}

/* 地区选择器 */
.region-selector {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin: 0 30rpx 20rpx;
}

.region-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.region-label {
  font-size: 26rpx;
  color: var(--color-text-light);
  flex: 1;
}

.region-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-primary);
  margin-right: 16rpx;
}

.region-arrow {
  font-size: 28rpx;
  color: var(--color-text-light);
}

/* 分区头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 24rpx;
  color: var(--color-primary);
}

/* 房源列表 */
.house-list {
  padding: 0 30rpx;
}

.house-card {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.house-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.house-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.house-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.house-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-primary);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.house-likes {
  font-size: 24rpx;
  color: var(--color-accent);
  flex-shrink: 0;
}

.house-location {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
}

.house-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.price {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.unit {
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-left: 4rpx;
}

.house-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}