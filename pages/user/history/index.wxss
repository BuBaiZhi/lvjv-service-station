/* 浏览历史页面样式 */

/* 页面基础 */
.page {
  min-height: 100vh;
  background-color: var(--color-background, #f5f5f5);
  color: var(--color-text, #333);
}

/* 导航栏 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: var(--color-background-card, #ffffff);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  font-size: 28rpx;
  color: var(--color-primary, #1e3d4c);
  padding: 10rpx 20rpx;
}

/* Tabs */
.tabs {
  display: flex;
  background: var(--color-background-card, #ffffff);
  padding: 16rpx 20rpx;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: var(--color-text-light, #666);
  padding: 16rpx 0;
  border-radius: 40rpx;
  background: var(--color-background, #f5f5f5);
  transition: all 0.2s;
}

.tab-item.active {
  color: white;
  background: var(--color-primary, #1e3d4c);
  font-weight: 500;
}

/* 筛选栏 */
.filter-bar {
  background: var(--color-background-card, #ffffff);
  padding: 16rpx 30rpx;
  border-bottom: 2rpx solid var(--color-border-light, #f0f0f0);
}

.filter-btn {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  background: var(--color-background, #f5f5f5);
  color: var(--color-text, #333);
  border-radius: 40rpx;
  font-size: 26rpx;
}

.arrow.up {
  transform: rotate(180deg);
}

/* 遮罩 */
.mask {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}

/* 下拉框 */
.dropdown {
  background: var(--color-background-card, #ffffff);
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.dropdown-item {
  padding: 28rpx;
  border-bottom: 2rpx solid var(--color-border-light, #f0f0f0);
  font-size: 30rpx;
  color: var(--color-text, #333);
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  background: rgba(168, 213, 186, 0.2);
  color: var(--color-primary, #1e3d4c);
}

/* 历史列表 */
.content {
  padding: 20rpx 30rpx;
}

.history-card {
  background: var(--color-background-card, #ffffff);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 20rpx;
  position: relative;
  transition: padding-left 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-card.edit-mode {
  padding-left: 80rpx;
}

/* 选择框 */
.checkbox {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border: 2px solid var(--color-border-light, #d9d9d9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: white;
  transition: all 0.3s;
}

.checkbox.checked {
  background: var(--color-primary, #1e3d4c);
  border-color: var(--color-primary, #1e3d4c);
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.history-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text, #333);
  margin-bottom: 10rpx;
}

.history-type {
  font-size: 22rpx;
  color: var(--color-primary, #1e3d4c);
  background: rgba(168, 213, 186, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  align-self: flex-start;
  margin-bottom: 10rpx;
}

.history-content {
  font-size: 24rpx;
  color: var(--color-text-light, #666);
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-accent, #ffb7b2);
}

.history-date {
  font-size: 24rpx;
  color: var(--color-text-light, #666);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text-light, #666);
}

/* 编辑模式底部操作栏 */
.edit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--color-background-card, #ffffff);
  padding: 20rpx 30rpx;
  border-top: 1px solid var(--border-light);
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
}

.page.dark-mode .edit-bar {
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.3);
}

.edit-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-text {
  font-size: 15px;
  color: #1890ff;
  padding: 16rpx 40rpx;
  border-radius: 24rpx;
  background: #e6f7ff;
}

.action-text.delete {
  color: #ff4d4f;
  background: var(--bg-action-delete);
}

.page.dark-mode .action-text {
  background: #1a3a5a;
  color: #1890ff;
}

.page.dark-mode .action-text.delete {
  background: var(--bg-action-delete);
  color: #ff7875;
}

/* 老人友好版 */
.elderly-mode .tab-item {
  padding: 32rpx 0;
  font-size: 40rpx;
}

.elderly-mode .filter-btn {
  padding: 18rpx 28rpx;
  font-size: 32rpx;
}

.elderly-mode .dropdown-item {
  padding: 40rpx;
  font-size: 36rpx;
}

.elderly-mode .history-image {
  width: 220rpx;
  height: 220rpx;
}

.elderly-mode .history-title {
  font-size: 36rpx;
}

.elderly-mode .history-type,
.elderly-mode .history-date {
  font-size: 28rpx;
}

.elderly-mode .history-price {
  font-size: 40rpx;
}

.elderly-mode .edit-bar {
  padding: 28rpx 30rpx;
}

.elderly-mode .action-text {
  font-size: 18px;
  padding: 20rpx 50rpx;
}

.elderly-mode .empty-text {
  font-size: 40rpx;
}
