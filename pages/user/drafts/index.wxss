/* 草稿箱页面样式 */

/* Tab 筛选 */
.tab-scroll {
  position: relative;
  z-index: 1;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-list {
  display: flex;
  padding: 0 24rpx;
  white-space: nowrap;
}

.tab-item {
  position: relative;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 500;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: var(--color-primary);
  border-radius: 3rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  position: relative;
  z-index: 1;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  position: relative;
  z-index: 1;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 草稿列表 */
.draft-list {
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

.draft-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 草稿头部 */
.draft-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.draft-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.type-icon {
  font-size: 28rpx;
}

.type-name {
  font-size: 24rpx;
  color: var(--color-primary);
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.draft-time {
  font-size: 24rpx;
  color: #999;
}

/* 草稿标题 */
.draft-title {
  margin-bottom: 12rpx;
}

.draft-title text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 草稿预览 */
.draft-preview {
  margin-bottom: 16rpx;
}

.draft-preview text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 草稿图片 */
.draft-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.draft-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.more-images {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

/* 操作按钮 */
.draft-actions {
  display: flex;
  gap: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.edit-btn {
  background: rgba(76, 175, 80, 0.1);
  color: var(--color-primary);
}

.delete-btn {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 26rpx;
}

/* 深色模式 */
.container.dark {
  background-color: #121212;
}

.dark .tab-scroll {
  background: #1E1E1E;
  border-bottom-color: #333;
}

.dark .tab-item {
  color: #B0B0B0;
}

.dark .tab-item.active {
  color: #66BB6A;
}

.dark .tab-indicator {
  background: #66BB6A;
}

.dark .loading-text {
  color: #888;
}

.dark .empty-text {
  color: #fff;
}

.dark .empty-hint {
  color: #888;
}

.dark .draft-card {
  background: #1E1E1E;
  box-shadow: none;
}

.dark .draft-title text {
  color: #fff;
}

.dark .draft-preview text {
  color: #B0B0B0;
}

.dark .draft-actions {
  border-top-color: #333;
}

/* 老人模式 */
.elder-mode .tab-item {
  font-size: 32rpx;
  padding: 28rpx 36rpx;
}

.elder-mode .empty-icon {
  font-size: 160rpx;
}

.elder-mode .empty-text {
  font-size: 36rpx;
}

.elder-mode .empty-hint {
  font-size: 30rpx;
}

.elder-mode .draft-title text {
  font-size: 36rpx;
}

.elder-mode .draft-preview text {
  font-size: 32rpx;
}

.elder-mode .action-btn {
  padding: 16rpx 32rpx;
}

.elder-mode .action-text {
  font-size: 30rpx;
}
