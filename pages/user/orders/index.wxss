/* 我的交易页面样式 */

/* 页面基础 */
.page {
  min-height: 100vh;
  background: var(--color-background, #f5f5f5);
  color: var(--color-text, #333);
}

/* 导航栏 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: var(--color-background-card, #ffffff);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  font-size: 28rpx;
  color: var(--color-primary, #1e3d4c);
  padding: 10rpx 20rpx;
}

/* Tabs */
.tabs {
  display: flex;
  background: var(--color-background-card, #ffffff);
  padding: 16rpx 20rpx;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: var(--color-text-light, #666);
  padding: 16rpx 0;
  border-radius: 40rpx;
  background: var(--color-background, #f5f5f5);
  transition: all 0.2s;
}

.tab-item.active {
  color: white;
  background: var(--color-primary, #1e3d4c);
  font-weight: 500;
}

/* 筛选栏 */
.filter-bar {
  background: var(--color-background-card, #ffffff);
  padding: 16rpx 30rpx;
  border-bottom: 2rpx solid var(--color-border-light, #f0f0f0);
}

.filter-btn {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  background: var(--color-background, #f5f5f5);
  color: var(--color-text, #333);
  border-radius: 40rpx;
  font-size: 26rpx;
}

.arrow.up {
  transform: rotate(180deg);
}

/* 遮罩 */
.mask {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}

/* 下拉框 */
.dropdown {
  background: var(--color-background-card, #ffffff);
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.dropdown-item {
  padding: 30rpx;
  border-bottom: 2rpx solid var(--color-border-light, #f0f0f0);
  color: var(--color-text, #333);
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  background: rgba(168, 213, 186, 0.2);
  color: var(--color-primary, #1e3d4c);
}

/* 内容 */
.content {
  padding: 20rpx 30rpx;
}

.order-card {
  background: var(--color-background-card, #ffffff);
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-type {
  font-size: 24rpx;
  color: var(--color-text-light, #666);
}

.order-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  color: #faad14;
  background: rgba(250, 173, 20, 0.15);
}

.order-status.ongoing {
  color: var(--color-primary, #1e3d4c);
  background: rgba(168, 213, 186, 0.2);
}

.order-status.completed {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.15);
}

.order-content {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.order-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text, #333);
}

.order-date {
  font-size: 24rpx;
  color: var(--color-text-light, #666);
}

.order-price {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-accent, #ffb7b2);
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid var(--color-border-light, #f0f0f0);
}

.btn-secondary,
.btn-primary {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}

.btn-secondary {
  color: var(--color-text-light, #666);
  background: transparent;
  border: 2rpx solid var(--color-border-light, #d9d9d9);
}

.btn-primary {
  color: white;
  background: var(--color-primary, #1e3d4c);
  border: none;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 老人友好版 */
.elderly-mode .tab-item {
  padding: 30rpx 0;
  font-size: 18px;
}

.elderly-mode .filter-btn {
  padding: 16rpx 24rpx;
  font-size: 18px;
}

.elderly-mode .dropdown-item {
  padding: 40rpx;
  font-size: 18px;
}

.elderly-mode .order-title {
  font-size: 36rpx;
}

.elderly-mode .order-type,
.elderly-mode .order-date {
  font-size: 28rpx;
}

.elderly-mode .order-status {
  font-size: 28rpx;
}

.elderly-mode .order-price {
  font-size: 44rpx;
}

.elderly-mode .btn-secondary,
.elderly-mode .btn-primary {
  padding: 16rpx 32rpx;
  font-size: 32rpx;
}

.elderly-mode .empty-text {
  font-size: 36rpx;
}
