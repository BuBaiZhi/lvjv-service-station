.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 头部统计 */
.header {
  background: white;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.rating-summary {
  display: flex;
}

.rating-left {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 2rpx solid #f0f0f0;
  margin-right: 30rpx;
}

.rating-score {
  font-size: 80rpx;
  font-weight: bold;
  color: #1e3d4c;
  line-height: 1.2;
}

.rating-stars {
  margin-bottom: 8rpx;
}

.star {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.rating-total {
  font-size: 24rpx;
  color: #999;
}

.rating-right {
  flex: 1;
}

.rating-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.rating-label {
  width: 60rpx;
  font-size: 24rpx;
  color: #666;
}

.rating-bar {
  flex: 1;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.rating-fill {
  height: 100%;
  background: linear-gradient(90deg, #1e3d4c, #2a5a6e);
  border-radius: 8rpx;
}

.rating-count {
  width: 60rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 筛选标签 */
.filter-tabs {
  background: white;
  padding: 20rpx 30rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-list {
  display: inline-block;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 40rpx;
}

.tab-item.active {
  color: white;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
}

/* 评价列表 */
.reviews-list {
  flex: 1;
  padding: 20rpx;
}

.review-item {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

/* 用户信息 */
.user-info {
  display: flex;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-detail {
  flex: 1;
}

.user-name-line {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.review-meta {
  display: flex;
  align-items: center;
}

.stars {
  margin-right: 16rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

/* 评价内容 */
.review-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 评价图片 */
.review-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.review-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

/* 房东回复 */
.host-reply {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.reply-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.reply-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  text-align: right;
}

/* 互动栏 */
.interaction-bar {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.interaction-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  padding: 6rpx 0;
}

.interaction-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.interaction-count {
  font-size: 24rpx;
  color: #666;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 写评价按钮 */
.write-review-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(30, 61, 76, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  color: white;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}