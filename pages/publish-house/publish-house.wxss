.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.form-container {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 16rpx;
}

.required {
  color: #ff6b6b;
  margin-left: 4rpx;
}

.form-input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.remove-image {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 位置选择 */
.location-selector {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 价格输入 */
.price-input {
  display: flex;
  align-items: center;
}

.price-field {
  flex: 1;
  margin-right: 20rpx;
}

.price-unit {
  font-size: 26rpx;
  color: #999;
}

/* 设施列表 */
.facility-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.facility-item {
  display: flex;
  align-items: center;
  width: 30%;
  margin-bottom: 16rpx;
}

.facility-name {
  font-size: 26rpx;
  color: #333;
  margin-left: 8rpx;
}

/* 标签 */
.tags-input {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.tag-input {
  height: 60rpx;
  font-size: 26rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-item {
  background: rgba(30, 61, 76, 0.08);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  display: flex;
  align-items: center;
}

.tag-text {
  font-size: 24rpx;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.remove-tag {
  font-size: 24rpx;
  color: #999;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.publish-btn[disabled] {
  opacity: 0.5;
}

.publish-btn::after {
  border: none;
}

/* 地图选点入口（美团外卖风格） */
.map-picker {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.map-preview {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
}

.map-icon {
  font-size: 64rpx;
  color: white;
  margin-right: 24rpx;
}

.map-texts {
  flex: 1;
}

.map-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.map-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.selected-location {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(30, 61, 76, 0.05);
  border: 2rpx solid #1e3d4c;
}

.location-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.location-detail {
  flex: 1;
}

.location-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 6rpx;
}

.location-coord {
  display: block;
  font-size: 22rpx;
  color: #6b8c7d;
}

.change-location {
  padding: 8rpx 24rpx;
  background: white;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #1e3d4c;
  border: 2rpx solid #1e3d4c;
}

.change-location:active {
  background: #1e3d4c;
  color: white;
}