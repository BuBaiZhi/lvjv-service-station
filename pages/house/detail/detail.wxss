.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

.detail-container {
  width: 100%;
}

/* 轮播图 */
.swiper-container {
  position: relative;
  width: 100%;
  height: 480rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.price-tag {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 40rpx;
  padding: 12rpx 30rpx;
  color: white;
  z-index: 10;
}

.price {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffd700;
}

.unit {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-left: 6rpx;
}

.image-count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  color: white;
  font-size: 24rpx;
  z-index: 10;
}

/* 卡片通用样式 */
.card {
  background: white;
  border-radius: 24rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  border-radius: 3rpx;
}

/* 标题区域 */
.title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.title-left {
  flex: 1;
  margin-right: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1e3d4c;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: block;
}

.rating {
  display: flex;
  align-items: center;
}

.star {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.score {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 600;
  margin-right: 8rpx;
}

.comment-count {
  font-size: 26rpx;
  color: #999;
}

.favorite-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
}

.favorite-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.favorite-text {
  font-size: 22rpx;
  color: #666;
}

/* 位置 */
.location-section {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 16rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.address {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
  word-break: break-all;
}

.distance {
  font-size: 24rpx;
  color: #6b8c7d;
  background: rgba(107, 140, 125, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  margin-right: 12rpx;
}

.map-link {
  font-size: 26rpx;
  color: #1e3d4c;
  font-weight: 500;
  white-space: nowrap;
}

/* 入住信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  text-align: center;
}

.info-item {
  padding: 20rpx 0;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #1e3d4c;
}

/* 设施网格 */
.facilities-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.facility-grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.facility-icon {
  font-size: 40rpx;
  color: #1e3d4c;
  margin-bottom: 8rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(30, 61, 76, 0.08);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.facility-name {
  font-size: 24rpx;
  color: #666;
}

/* 房东信息 */
.host-info {
  display: flex;
  align-items: center;
}

.host-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.host-detail {
  flex: 1;
}

.host-name {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
  flex-wrap: wrap;
}

.host-name text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.host-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.host-stats {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #6b8c7d;
  flex-wrap: wrap;
}

.contact-btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #1e3d4c;
  background: #f0f0f0;
  border-radius: 32rpx;
  margin: 0;
  padding: 0;
  flex-shrink: 0;
}

.contact-btn::after {
  border: none;
}

/* 房源介绍 */
.description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 评价 */
.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.rating-summary {
  display: flex;
  align-items: center;
}

.summary-star {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.summary-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
  margin-right: 8rpx;
}

.summary-count {
  font-size: 24rpx;
  color: #999;
}

.header-right {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.section-more, .write-review {
  font-size: 26rpx;
  color: #1e3d4c;
  padding: 8rpx 20rpx;
  background: rgba(30, 61, 76, 0.08);
  border-radius: 30rpx;
  white-space: nowrap;
}

.write-review {
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
}

.review-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.review-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.review-time {
  font-size: 22rpx;
  color: #999;
}

.review-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #ff6b6b;
  white-space: nowrap;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-left: 76rpx;
}

.review-images {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  margin-left: 76rpx;
  flex-wrap: wrap;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
}

/* 没有评价 */
.no-reviews {
  text-align: center;
  padding: 60rpx 0;
}

.no-reviews-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.no-reviews-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.no-reviews-subtext {
  font-size: 24rpx;
  color: #ccc;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.price-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  flex-wrap: wrap;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.unit {
  font-size: 24rpx;
  color: #999;
}

.total-desc {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.icon-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #666;
}

.book-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 40rpx;
  margin: 0;
  padding: 0;
}

.book-btn::after {
  border: none;
}


