<!-- 登录选择页 -->
<view class="page {{theme === 'dark' ? 'dark-mode' : 'light'}} {{appVersion === 'elderly' ? 'elderly-mode' : ''}}">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="circle circle-1"></view>
    <view class="circle circle-2"></view>
  </view>

  <!-- 顶部图形区 -->
  <view class="header-section">
    <view class="logo-box">
      <text class="logo-icon">🏘️</text>
    </view>
    <text class="app-title">旅居服务站</text>
    <text class="app-subtitle">连接村民与游客的服务平台</text>
  </view>

  <!-- 登录方式卡片区 -->
  <view class="login-cards">
    <!-- 微信登录卡片 -->
    <view class="card wechat-card" bindtap="loginWithWeChat">
      <view class="card-header">
        <text class="card-icon">💬</text>
        <text class="card-title">微信登录</text>
      </view>
      <text class="card-desc">一键快速登录</text>
      <view class="card-arrow">→</view>
    </view>

    <!-- 游客浏览卡片 -->
    <view class="card guest-card" bindtap="loginAsGuest">
      <view class="card-header">
        <text class="card-icon">👤</text>
        <text class="card-title">游客浏览</text>
      </view>
      <text class="card-desc">无需登录即可浏览</text>
      <view class="card-arrow">→</view>
    </view>
  </view>

  <!-- 底部协议 -->
  <view class="footer-section">
    <text class="agreement-hint">登录即表示您同意</text>
    <view class="agreement-links">
      <text class="link" bindtap="showAgreement">《用户协议》</text>
      <text class="separator">·</text>
      <text class="link" bindtap="showPrivacy">《隐私政策》</text>
    </view>
  </view>

  <!-- 加载提示 -->
  <view wx:if="{{isLoading}}" class="loading-overlay">
    <view class="loading-box">
      <view class="spinner"></view>
      <text class="loading-text">登录中...</text>
    </view>
  </view>
</view>
