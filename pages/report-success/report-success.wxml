<view class="container">
  <view class="success-icon">✅</view>
  <text class="success-title">举报已提交</text>
  <text class="success-message">感谢你的反馈，我们会尽快处理</text>
  
  <view class="report-info">
    <text class="info-label">举报内容：</text>
    <text class="info-value">{{reason}}</text>
    <text class="info-label" wx:if="{{detail}}">详细说明：</text>
    <text class="info-value" wx:if="{{detail}}">{{detail}}</text>
  </view>

  <view class="action-buttons">
    <button class="back-btn" bindtap="goBack">返回</button>
    <button class="view-btn" bindtap="viewReportStatus">查看处理进度</button>
  </view>
</view>