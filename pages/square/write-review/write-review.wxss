.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.form-container {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
}

.house-info {
  display: flex;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.house-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.house-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.house-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 8rpx;
}

.house-location {
  font-size: 24rpx;
  color: #999;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 16rpx;
}

.required {
  color: #ff6b6b;
  margin-left: 4rpx;
}

.rating-stars {
  display: flex;
  gap: 16rpx;
}

.star {
  font-size: 60rpx;
  color: #ffb800;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.remove-image {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.anonymous-label {
  display: flex;
  align-items: center;
}

.anonymous-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 12rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

.submit-btn[disabled] {
  opacity: 0.5;
}

.submit-btn::after {
  border: none;
}