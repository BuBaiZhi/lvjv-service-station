/* 广场页面样式 */

/* 内容层 - 确保在背景之上 */
.nav-bar,
.tab-scroll,
.card,
.post-scroll {
  position: relative;
  z-index: 1;
}

/* 导航图标按钮 */
.nav-icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 32rpx;
}

.nav-icon-img {
  width: 40rpx;
  height: 40rpx;
}

/* Tab 滚动区 */
.tab-scroll {
  white-space: nowrap;
  padding: 20rpx 30rpx;
  background: var(--color-background-card);
}

.tab-list {
  display: inline-block;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: rgba(168, 213, 186, 0.2);
  color: var(--color-text);
  transition: all 0.2s;
}

.tab-item.active {
  background: var(--color-primary);
  color: white;
  font-weight: 500;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background: var(--color-background-card);
  border-top: 2rpx solid var(--color-border-light);
}

.filter-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: var(--color-background-card);
  border: 2rpx solid var(--color-secondary);
  border-radius: 40rpx;
  font-size: 26rpx;
  color: var(--color-text);
  margin-right: 20rpx;
}

.filter-arrow {
  margin-left: 8rpx;
  font-size: 20rpx;
}

.filter-icon {
  margin-left: 8rpx;
}

/* 帖子滚动区 */
.post-scroll {
  height: calc(100vh - 280rpx);
  padding: 20rpx 30rpx;
}

/* 帖子卡片 */
.post-card {
  margin-bottom: 20rpx;
}

/* 作者信息 */
.post-author {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid var(--color-secondary);
}

.author-info {
  flex: 1;
}

.author-name-row {
  display: flex;
  align-items: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-right: 8rpx;
}

.post-meta {
  font-size: 22rpx;
  color: var(--color-text-light);
}

/* 帖子内容 */
.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 12rpx;
  display: block;
}

.post-content {
  font-size: 28rpx;
  color: var(--color-text-light);
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

/* 帖子图片 */
.post-images {
  display: flex;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

/* 帖子标签 */
.post-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

/* 互动栏 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 2rpx solid var(--color-border-light);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
}

.action-icon {
  font-size: 36rpx;
}

.action-count {
  font-size: 24rpx;
  color: var(--color-text-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text-light);
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 32rpx 40rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
}

.reset-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
}

.reset-btn::after {
  border: none;
}

.confirm-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 28rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
}

.confirm-btn::after {
  border: none;
}

/* 地区列表 */
.region-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.region-item {
  width: calc(25% - 15rpx);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #333;
  position: relative;
}

.region-item.active {
  background: rgba(30, 61, 76, 0.1);
  color: #1e3d4c;
  font-weight: 500;
}

.region-check {
  position: absolute;
  top: 4rpx;
  right: 8rpx;
  color: #1e3d4c;
  font-size: 20rpx;
}

/* 筛选区块 */
.filter-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-item {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #333;
}

.option-item.active {
  background: rgba(30, 61, 76, 0.1);
  color: #1e3d4c;
  font-weight: 500;
}