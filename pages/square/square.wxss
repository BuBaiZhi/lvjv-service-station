.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 头部 */
.header {
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  flex: 1;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-text {
  font-size: 28rpx;
  color: #999;
}

.publish-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.publish-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 分类Tab */
.tabs {
  background: #ffffff;
  padding: 20rpx 30rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-list {
  display: inline-block;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 40rpx;
  transition: all 0.2s;
}

.tab-item.active {
  color: #ffffff;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  font-weight: 500;
}

/* 帖子列表 */
.post-list {
  flex: 1;
  padding: 20rpx;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.publish-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.publish-icon {
  font-size: 40rpx;
  color: white;
}