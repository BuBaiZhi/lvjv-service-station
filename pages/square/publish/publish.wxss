.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.form-container {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 16rpx;
}

.required {
  color: #ff6b6b;
  margin-left: 4rpx;
}

/* 分类选择 */
.category-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.category-option {
  padding: 12rpx 30rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
}

.category-option.active {
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
}

/* 输入框 */
.form-input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.remove-image {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 标签 */
.tags-input {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.tag-input {
  height: 60rpx;
  font-size: 26rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-item {
  background: rgba(30, 61, 76, 0.08);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  display: flex;
  align-items: center;
}

.tag-text {
  font-size: 24rpx;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.remove-tag {
  font-size: 24rpx;
  color: #999;
}

/* 定位 */
.location-selector {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.publish-btn[disabled] {
  opacity: 0.5;
}

.publish-btn::after {
  border: none;
}