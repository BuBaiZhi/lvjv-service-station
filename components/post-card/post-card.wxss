.post-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  position: relative;
}

/* 置顶标识 */
.pin-badge {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 0 0 20rpx 20rpx;
  z-index: 10;
}

/* 作者信息 */
.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.author-detail {
  flex: 1;
}

.author-name {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 4rpx;
}

.author-name text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.author-level {
  font-size: 20rpx;
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
}

.post-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.location-tag {
  margin-left: 8rpx;
  color: #6b8c7d;
}

/* 帖子类型 */
.post-type {
  margin-bottom: 16rpx;
}

.type-tag {
  display: inline-block;
  padding: 4rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
}

/* ✅ 用属性选择器匹配中文类型 */
.type-tag[data-type="活动"] {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}

.type-tag[data-type="找搭子"] {
  background: rgba(30, 61, 76, 0.1);
  color: #1e3d4c;
}

.type-tag[data-type="技能变现"] {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.type-tag[data-type="讨论"] {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

/* 标题 */
.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 正文 */
.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-content.expand {
  -webkit-line-clamp: unset;
}

/* 图片网格 */
.image-grid {
  display: grid;
  gap: 6rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.grid-1 {
  grid-template-columns: 1fr;
}

.grid-2 {
  grid-template-columns: 1fr 1fr;
}

.grid-3, .grid-4, .grid-5, .grid-6 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-item {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
}

.image-count {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  font-size: 22rpx;
  color: #6b8c7d;
  background: rgba(107, 140, 125, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 28rpx;
  color: #999;
}

.stat-count {
  font-size: 24rpx;
  color: #666;
}

/* 互动栏 */
.interaction-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.interaction-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  transition: all 0.2s;
}

.interaction-item.active {
  background: rgba(255, 107, 107, 0.1);
}

.interaction-item .icon {
  font-size: 36rpx;
}

.interaction-item .text {
  font-size: 24rpx;
  color: #666;
}

.interaction-item.active .text {
  color: #ff6b6b;
}

/* 点赞动画 */
@keyframes like {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.like-animation {
  animation: like 0.3s ease;
}