.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  height: 80vh;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3d4c;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.comment-list {
  flex: 1;
  padding: 30rpx;
}

.comment-item {
  margin-bottom: 40rpx;
}

.comment-header {
  display: flex;
  margin-bottom: 16rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-info {
  flex: 1;
}

.comment-user {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e3d4c;
  margin-right: 8rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-actions {
  display: flex;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 10rpx;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.action-count {
  font-size: 24rpx;
  color: #666;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-left: 80rpx;
}

.replies {
  margin-left: 80rpx;
  margin-top: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.reply-item {
  margin-bottom: 20rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-header {
  display: flex;
  margin-bottom: 8rpx;
}

.reply-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.reply-info {
  flex: 1;
}

.reply-user {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 2rpx;
}

.reply-to {
  font-size: 24rpx;
  color: #6b8c7d;
  margin-left: 8rpx;
}

.reply-time {
  font-size: 20rpx;
  color: #999;
}

.reply-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-left: 60rpx;
}

.comment-input-area {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  background: white;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(135deg, #1e3d4c, #2a5a6e);
  color: white;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin: 0;
  padding: 0;
}

.send-btn::after {
  border: none;
}